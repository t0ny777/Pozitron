<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".JobOfferJobSearch"
    android:background="#f5f5f5">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#fff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Job Type"
            android:fontFamily="@font/neuehelveticabq_bold"
            android:textColor="#000"
            android:layout_marginLeft="20dp"
            android:textSize="25dp"
            android:layout_centerVertical="true"/>


    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/job_offer"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#fff">

        <TextView

            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Job Offer"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/bentonsans_regular"
            android:layout_marginLeft="20dp"
            android:textSize="16.5dp"/>

        <ImageView
            android:layout_marginTop="13dp"
            android:layout_width="30dp"
            android:layout_centerVertical="true"
            android:layout_height="30dp"
            android:src="@drawable/ic_navigate_next_black_24dp"
            android:layout_marginLeft="360dp"/>

    </RelativeLayout>

    <View
        android:layout_width="360dp"
        android:layout_marginLeft="20dp"
        android:layout_height="0.1dp"
        android:background="@drawable/recycler_view_divider"/>

    <RelativeLayout
        android:id="@+id/job_search"
        android:layout_width="match_parent"
        android:layout_height="60dp"

        android:background="#fff">

        <TextView

            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Job Search"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:textSize="16.5dp"/>

        <ImageView
            android:layout_marginTop="13dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_navigate_next_black_24dp"
            android:layout_gravity="center"
            android:layout_marginLeft="360dp"/>

    </RelativeLayout>





</LinearLayout>