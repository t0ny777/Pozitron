<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".CartActivity"
    android:orientation="horizontal"
    android:background="#fff">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/cs"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#fff">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Items in Cart"
                android:fontFamily="@font/neuehelveticabq_bold"
                android:textColor="#000"
                android:layout_marginLeft="20dp"
                android:textSize="25dp"
                android:layout_centerVertical="true"/>



        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@+id/cs"
            android:id="@+id/go_to_cart_ser"
            android:background="#ebecf0"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Services"
                android:fontFamily="@font/neuehelveticabq_bold"
                android:layout_centerVertical="true"
                android:textColor="#808080"
                android:textSize="17dp"
                android:layout_marginLeft="20dp"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="365dp"
                android:src="@drawable/ic_navigate_next_black_24dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@+id/go_to_cart_ser"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#b2beb5"
            android:id="@+id/calculator_screen">

            <TextView
                android:id="@+id/calculator_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="000000"
                android:textStyle="bold"
                android:maxLength="20"
                android:textSize="20dp"/>

        </RelativeLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/ac"
            android:layout_below="@+id/calculator_screen"
            android:layout_marginTop="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="#c4cace"
            android:layout_marginLeft="20dp"
            app:cardElevation="0dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AC"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="18dp"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/equals"
            android:layout_below="@+id/calculator_screen"
            android:layout_marginTop="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="#c4cace"
            android:layout_marginLeft="352.5dp"
            app:cardElevation="0dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="="
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="22dp"/>


        </android.support.v7.widget.CardView>


        <RelativeLayout
            android:layout_below="@+id/equals"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:background="#f5f5f5">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/cart_list"
                android:layout_width="match_parent"
                android:layout_height="607dp"
                >


            </android.support.v7.widget.RecyclerView>

        </RelativeLayout>

    </RelativeLayout>




</ScrollView>