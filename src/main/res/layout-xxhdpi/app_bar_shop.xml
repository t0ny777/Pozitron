<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.v7.widget.CardView
        android:id="@+id/cardviewss"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:cardBackgroundColor="#F96167">



        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/summon_demon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="-170dp"
            android:layout_gravity="center" />

        <android.support.v7.widget.CardView
            android:layout_width="330dp"
            android:layout_height="27.5dp"
            android:layout_gravity="center"
            app:cardCornerRadius="5dp"
            android:layout_marginLeft="25dp"
            app:cardBackgroundColor="#fff">


            <EditText
                android:id="@+id/search_edit_text"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:fontFamily="@font/bentonsans_regular"
                android:layout_marginLeft="-20dp"
                android:hint="Search"
                android:layout_gravity="center"
                android:textSize="18.5dp"/>

            <ImageView
                android:id="@+id/search_btn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/new_search"
                android:layout_gravity="center"
                android:layout_marginLeft="145dp"/>




        </android.support.v7.widget.CardView>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/categories"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:cardElevation="0dp"
        android:layout_marginTop="45dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categories"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:textSize="20dp"
            android:fontFamily="@font/neuehelveticabq_bold"
            android:textColor="#000"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_navigate_next_black_24dp"
            android:layout_marginLeft="170dp"
            />

    </android.support.v7.widget.CardView>





    <include

        layout="@layout/content_shop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"/>

</RelativeLayout>