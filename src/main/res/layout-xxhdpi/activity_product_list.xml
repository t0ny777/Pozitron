<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.e_commerce.ProductList"
    android:background="#fff">



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#fff">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pick One Category"
                android:fontFamily="@font/neuehelveticabq_bold"
                android:textColor="#000"
                android:layout_marginLeft="20dp"
                android:textSize="25dp"
                android:layout_centerVertical="true"/>



        </RelativeLayout>


        <android.support.v7.widget.CardView
            android:id="@+id/solar_panel"
            android:layout_width="150dp"
            android:layout_height="50dp"
            app:cardCornerRadius="22.5dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#ececec"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="240dp">

            <TextView

                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Solar Panel"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="18.5dp"/>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/combiner_box"
            android:layout_width="180dp"
            android:layout_height="50dp"
            app:cardCornerRadius="22.5dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#ececec"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp">

            <TextView

                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Combiner Box"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="18.5dp"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/solar_charge_controller"
            android:layout_width="250dp"
            android:layout_height="50dp"
            app:cardCornerRadius="22.5dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#ececec"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="140dp">

            <TextView

                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Solar Charge Controller"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="18.5dp"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/battery"
            android:layout_width="120dp"
            android:layout_height="50dp"
            app:cardCornerRadius="22.5dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#ececec"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp">

            <TextView

                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Battery"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="18.5dp"/>

