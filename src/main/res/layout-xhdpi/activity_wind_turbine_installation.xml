<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SolarPanel">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Service"
                android:textColor="#000"
                android:fontFamily="@font/neuehelveticabq_bold"
                android:layout_marginLeft="20dp"
                android:textSize="21dp"
                android:layout_centerVertical="true"/>

            <ImageView
                android:id="@+id/publish_wind_job"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/ic_navigate_next_black_24dp"
                android:layout_marginLeft="300dp"
                android:layout_centerVertical="true"/>

        </RelativeLayout>


        <View
            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@drawable/recycler_view_divider"
            />

        <FrameLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="-1dp">


            <ImageView
                android:id="@+id/wind_job_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/photo_camera" />

            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/wind_job_image1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center" />

        </FrameLayout>





        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:background="@drawable/recycler_view_divider"/>


        <EditText
            android:id="@+id/wind_job_name"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/bentonsans_regular"
            android:inputType="textMultiLine"
            android:background="@null"
            android:textSize="18.5dp"
            android:layout_gravity="center"
            android:hint="Service Name"
            android:textColor="#000"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/recycler_view_divider"/>

        <EditText
            android:id="@+id/wind_job_wage"
            android:layout_width="320dp"
            android:fontFamily="@font/bentonsans_regular"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:inputType="textMultiLine"
            android:background="@null"
            android:textSize="18.5dp"
            android:layout_gravity="center"
            android:hint="Wage/Salary"
            android:textColor="#000"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/recycler_view_divider"/>


        <Spinner
            android:layout_marginTop="15dp"
            android:id="@+id/drop_down1_wind_job"
            android:layout_width="320dp"
            android:layout_height="25dp"
            android:layout_gravity="center"

            ></Spinner>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/recycler_view_divider"/>

        <EditText
            android:id="@+id/wind_job_edu"
            android:fontFamily="@font/bentonsans_regular"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:inputType="textMultiLine"
            android:background="@null"
            android:textSize="18.5dp"
            android:layout_gravity="center"
            android:hint="Education"
            android:textColor="#000"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/recycler_view_divider"/>

        <EditText
            android:fontFamily="@font/bentonsans_regular"
            android:id="@+id/wind_job_experience"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:inputType="textMultiLine"
            android:background="@null"
            android:textSize="18.5dp"
            android:layout_gravity="center"
            android:hint="Experience"
            android:textColor="#000"/>



        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/recycler_view_divider"/>

        <EditText
            android:fontFamily="@font/bentonsans_regular"
            android:id="@+id/wind_job_company_name"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:inputType="textMultiLine"
            android:background="@null"
            android:textSize="18.5dp"
            android:layout_gravity="center"
            android:hint="Company Name (optional)"
            android:textColor="#000"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/recycler_view_divider"/>

        <EditText
            android:fontFamily="@font/bentonsans_regular"
            android:id="@+id/wind_job_descr"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:inputType="textMultiLine"
            android:background="@null"
            android:textSize="18.5dp"
            android:layout_gravity="center"
            android:hint="Short Description"
            android:textColor="#000"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/recycler_view_divider"/>

        <EditText
            android:fontFamily="@font/bentonsans_regular"
            android:id="@+id/wind_job_address"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:inputType="textMultiLine"
            android:background="@null"
            android:textSize="18.5dp"
            android:layout_gravity="center"
            android:hint="Address"
            android:textColor="#000"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/recycler_view_divider"/>

        <EditText
            android:fontFamily="@font/bentonsans_regular"
            android:id="@+id/wind_job_phone_num"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:inputType="number"
            android:digits="1234567890"
            android:background="@null"
            android:textSize="18.5dp"
            android:layout_gravity="center"
            android:hint="Phone Number"
            android:textColor="#000"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/recycler_view_divider"/>




    </LinearLayout>


</ScrollView>