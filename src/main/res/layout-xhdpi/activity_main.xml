<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/group_9"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="225dp"
        android:fontFamily="@font/neuehelveticabq_bold"
        android:text="Dive into"
        android:textColor="#000"
        android:textSize="29dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="260dp"
        android:fontFamily="@font/neuehelveticabq_bold"
        android:text="the world of"
        android:textColor="#000"
        android:textSize="29dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="295dp"
        android:fontFamily="@font/neuehelveticabq_bold"
        android:text="renewables!"
        android:textColor="#000"
        android:textSize="29dp"
        android:textStyle="bold" />

    <android.support.v7.widget.CardView
        android:id="@+id/sign_up"
        android:layout_width="260dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        android:layout_height="35dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="360dp"
        app:cardBackgroundColor="#F96167"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:text="Create an account"
            android:textSize="16dp"
            android:textColor="#fff"
            android:textStyle="bold" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/sign_in"
        app:cardElevation="0dp"
        android:layout_width="260dp"
        app:cardCornerRadius="20dp"
        android:layout_height="35dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="410dp"
        app:cardBackgroundColor="#F96167"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:text="Log in"
            android:textSize="16dp"
            android:textColor="#fff"
            android:textStyle="bold" />

    </android.support.v7.widget.CardView>



    <android.support.v7.widget.CardView
        app:cardBackgroundColor="#F96167"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Created by Nurdaulet Kozhakhmetov"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="20dp"/>

    </android.support.v7.widget.CardView>

</RelativeLayout>