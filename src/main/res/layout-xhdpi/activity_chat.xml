<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#fff">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/chat_bar_image"
            android:layout_width="37.5dp"
            android:layout_height="37.5dp"
            android:src="@drawable/profile"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/chat_bar_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="17dp"
            android:maxLength="30"
            android:text="User Name"
            android:layout_alignParentTop="true"
            android:fontFamily="@font/neuehelveticabq_bold"
            android:layout_marginTop="7.5dp"
            android:layout_marginLeft="72.5dp"
            />

        <TextView
            android:id="@+id/user_last_seen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/chat_bar_user_name"
            android:textColor="#000"
            android:textSize="13dp"
            android:text="Last Seen"
            android:layout_marginLeft="72.5dp"
            android:layout_marginTop="-3dp"/>


    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/line"
        android:background="#fff"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="0dp"
        >

        <android.support.v7.widget.RecyclerView
            android:id="@+id/private_messages"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/line"></android.support.v7.widget.RecyclerView>
    </LinearLayout>



    <RelativeLayout
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="#fff">



        <ImageView
            android:id="@+id/add_image"
            android:layout_width="17.5dp"
            android:layout_height="17.5dp"
            android:src="@drawable/plus_symbol"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="12.5dp"
            />

        <RelativeLayout
            android:gravity="center"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="10dp"
            android:layout_width="270dp"
            android:layout_height="27.5dp"
            android:background="@drawable/button_style_two">

            <EditText
                android:textSize="17dp"
                android:layout_marginTop="-2dp"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:id="@+id/type_message"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="Type"
                android:fontFamily="@font/bentonsans_regular"
                android:layout_gravity="center"


                />

        </RelativeLayout>





        <ImageView
            android:id="@+id/send_message"
            android:layout_width="22.5dp"
            android:layout_height="22.5dp"
            android:src="@drawable/paper_plane"
            android:layout_marginLeft="325dp"
            android:layout_marginTop="12dp"/>



    </RelativeLayout>

</RelativeLayout>